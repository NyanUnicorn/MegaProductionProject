<UserControl x:Class="MegaProduction.View.Fragments.UCs.ListTemplates.OfferListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MegaProduction.View.Fragments.UCs.ListTemplates"
             mc:Ignorable="d" 
             Height="200" Width="425">
    <Grid Background="#0F97FF4C">
        <Label x:Name="LblTitle" Content="Title" HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="415"/>
        <Label x:Name="LblClient" Content="Client" HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="341" Margin="0,34,0,0"/>
        <TextBox x:Name="TxtContent" HorizontalAlignment="Left" Height="122" Margin="0,68,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="415" Background="{x:Null}" VerticalScrollBarVisibility="Disabled" BorderThickness="0"/>
        <Label x:Name="LblDaysLeft" Content="Int" HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="69" Margin="346,34,0,0" Foreground="#FF00B1FF"/>

    </Grid>
</UserControl>
